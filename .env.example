# Переменные окружения для Sheets to WordPress Automation
# Заполните реальными значениями перед запуском.

# OpenAI API
# Ключ: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
# Модели Responses API
OPENAI_TEXT_MODEL=gpt-4o-mini
OPENAI_SECOND_MODEL=gpt-4o-mini
# Уровень размышления (актуально для reasoning-моделей: low|medium|high)
OPENAI_TEXT_REASONING_EFFORT=
OPENAI_SECOND_REASONING_EFFORT=
# Температура генерации (0.0 - 2.0)
OPENAI_TEXT_TEMPERATURE=
OPENAI_SECOND_TEMPERATURE=
# Файлы системных промптов (путь относительно папки run или абсолютный путь)
# Первый промпт: строгая проверка фактов по WEBSITE INFO/REGULATIONS INFO/PDF, допускает меньше 2 абзацев при недостатке данных, запрет лишних заголовков в org_info, приоритет PDF при расхождениях
OPENAI_SYSTEM_PROMPT_FILE=prompts/assistant_system.txt
# Промпт второго ассистента: удаление пустых блоков, общих локаций без конкретики, заголовков вне явного списка (EN+PT), строк "[]" и строгая очистка ссылок на регламент при пустом REGULATIONS LINK
OPENAI_SECOND_SYSTEM_PROMPT_FILE=prompts/second_system.txt

# OpenCage Geocoding API
# Ключ: https://opencagedata.com/api
OPENCAGE_API_KEY=your-opencage-api-key-here

# Google Sheets
# ID таблицы берется из URL Google Sheets
GOOGLE_SPREADSHEET_ID=your-google-spreadsheet-id-here
GOOGLE_WORKSHEET_NAME=RACES
# JSON сервисного аккаунта: Google Cloud Console -> IAM & Admin -> Service Accounts
GOOGLE_CREDENTIALS_FILE=google-credentials.json
# Альтернатива: полный JSON сервисного аккаунта строкой (удобно для секрет-хранилищ)
GOOGLE_SERVICE_ACCOUNT_JSON=
# Настройки кеша и повторных попыток
GOOGLE_SHEETS_CACHE_TTL_SEC=2700
GOOGLE_SHEETS_UPDATE_MAX_ATTEMPTS=3
GOOGLE_SHEETS_UPDATE_BASE_DELAY_SEC=1

# WordPress/WooCommerce
# URL сайта WordPress
WP_URL=https://your-wordpress-site.com
# Доступ администратора WordPress
WP_ADMIN_USER=your-wp-admin-username
WP_ADMIN_PASS=your-wp-admin-password
# WooCommerce REST API: WooCommerce -> Settings -> Advanced -> REST API
WP_CONSUMER_KEY=ck_your-woocommerce-consumer-key
WP_CONSUMER_SECRET=cs_your-woocommerce-consumer-secret

# Настройки приложения
SKIP_AI=false
SKIP_IMAGE=true
SLEEP_SECONDS=3

# Расписание
RUN_ON_STARTUP=true
SCHEDULED_HOUR=2
SCHEDULED_MINUTE=0
TIMEZONE=Europe/Moscow

# Повторные попытки WooCommerce
WCAPI_MAX_ATTEMPTS=4
WCAPI_BASE_DELAY_SEC=1.5

# Логирование
LOG_LEVEL=INFO

# HTTP-запросы к сайтам/регламентам
# User-Agent для обхода простых блокировок/антиботов
HTTP_FETCH_USER_AGENT=
# Задержки ретраев загрузки (в секундах, через запятую), например: 60,120
HTTP_FETCH_RETRY_DELAYS_SEC=60,120
